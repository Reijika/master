        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
           
<LinearLayout
    
    android:id="@+id/layoutview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:gravity="top">



        <Button
            android:id="@+id/button1"
