        <TextView
            android:id="@+id/success"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Files Successfully Converted: 0" >
        </TextView>

        <TextView
